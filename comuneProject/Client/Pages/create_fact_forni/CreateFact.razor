@page "/fourni_fact/add"
@using comuneProject.Shared.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager

@inherits ComponentBase
@*@inject IDocumentService document*@
<style>
    #facturForm, #fournisseurForm {
        min-width: 300px
    }
</style>
<h1>Ajouté fournisseur</h1>
<hr />
@*<HxButton Text="Show information" OnClick="ToggleDisableForm" Color="ThemeColor.Primary" />*@
<div class="row col-lg-12 justify-content-lg-between">
    <div class="row m-1 col-12 justify-content-end">

        <a href='/fourni_fact/add_product' class="btn btn-primary" role="button">
            <i class="fas fa-product-plus"></i>
            Ajouté Produits
        </a>

    </div>
    <div class="card col-md-12 col-lg-5 m-1 p-0 shadow" id="fournisseurForm">
        <div class="card-body">
            <EditForm Model="@fournisseur" OnValidSubmit="Savefournisseur">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label for="Name" class="form-label">Nom de fournisseur</label>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="fournisseur.Name" />
                    </div>
                    <ValidationMessage For="@(() => fournisseur.Name)" />
                </div>
                <div class="mb-3">
                    <label for="Designation" class="form-label">Désignation</label>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="fournisseur.Designation" />
                    </div>
                    <ValidationMessage For="@(() => fournisseur.Designation)" />
                </div>
                <div class="mb-3">
                    <label for="RC" class="form-label">Registre commerce</label>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="fournisseur.RC" />
                    </div>
                    <ValidationMessage For="@(() => fournisseur.RC)" />
                </div>
                <div class="mb-3">
                    <label for="MF" class="form-label">Matricule fiscal</label>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="fournisseur.MF" />
                    </div>
                    <ValidationMessage For="@(() => fournisseur.MF)" />
                </div>
                <div class="mb-3">
                    <label for="NA" class="form-label">N° d'article</label>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="fournisseur.NA" />
                    </div>
                    <ValidationMessage For="@(() => fournisseur.NA)" />
                </div>
                <div class="mb-3">
                    <label for="Compte" class="form-label">Compte</label>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="fournisseur.Compte" />
                    </div>
                    <ValidationMessage For="@(() => fournisseur.Compte)" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Sauvgardé</button>
                    <button class="btn btn-light" @onclick="Cancel">Annulé</button>
                </div>
            </EditForm>

        </div>

    </div>
    <div class="card col-md-12 col-lg-5 m-1 p-0 shadow" id="facturForm">

        <div class="card-body h-100">
            <EditForm Model="@facture" OnValidSubmit="Savefacture">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label for="Num_facture" class="form-label">N° de facture</label>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="facture.Num_facture" />
                    </div>
                    <ValidationMessage For="@(() => facture.Num_facture)" />
                </div>
                <div class="mb-3">
                    <label for="Designation" class="form-label">Désignation</label>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="facture.Designation" />
                    </div>
                    <ValidationMessage For="@(() => facture.Designation)" />
                </div>
                <div class="mb-3">
                    <label for="Date_facture" class="form-label">Date de facture</label>
                    <div class="col-12">
                        <InputDate class="form-control" @bind-Value="facture.Date_facture" />
                    </div>
                    <ValidationMessage For="@(() => facture.Date_facture)" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Sauvgardé</button>
                    <button class="btn btn-light" @onclick="Cancel2">Annulé</button>
                </div>

            </EditForm>
        </div>

    </div>
</div>


